<UserControl x:Class="SpaceMonkey.UI.Controls.SatelliteCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpaceMonkey.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400" Background="White">
    <Grid Margin="5">
        <Border BorderBrush="Gray" BorderThickness="1">
            <Label Content="{Binding SatelliteName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"></Label>
        </Border>
    </Grid>
</UserControl>
